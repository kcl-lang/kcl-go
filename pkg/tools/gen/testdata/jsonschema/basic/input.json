{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://example.com/schemas/book.json",
	"type": "object",
	"properties": {
		"title": {
			"type": "string"
		},
		"authors": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"price": {
			"type": "number"
		},
		"available": {
			"type": "boolean",
			"default": true
		},
		"category": {
			"enum": [
				"Fiction",
				"Science",
				"History"
			]
		}
	},
	"required": [
		"title"
	]
}
